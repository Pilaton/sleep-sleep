{
  "$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
  "files": {
    "ignore": ["build", "coverage", "node_modules", "package.json"]
  },
  "formatter": {
    "indentStyle": "space",
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingComma": "es5"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "all": true,
      "style": {
        "noDefaultExport": "off",
        "noNonNullAssertion": "off"
      },
      "suspicious": {
        "noConsoleLog": "off"
      }
    }
  },
  "organizeImports": {
    "enabled": true
  }
}
